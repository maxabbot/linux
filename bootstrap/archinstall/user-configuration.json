  "mirror_config": {
    "custom_mirrors": [],
    "mirror_regions": {
      "New Zealand": [
        "https://mirror.fsmg.org.nz/archlinux/$repo/os/$arch",
        "https://mirror.2degrees.nz/archlinux/$repo/os/$arch"
      ]
    }
