            "status": "create",
            "type": "primary"
          },
          {
            "btrfs": [
              {"mountpoint": "@", "name": "@"},
              {"mountpoint": "@home", "name": "@home"},
              {"mountpoint": "@log", "name": "@log"},
              {"mountpoint": "@pkg", "name": "@pkg"},
              {"mountpoint": "@snapshots", "name": "@snapshots"}
